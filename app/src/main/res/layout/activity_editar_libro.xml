<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity_editar_libro">

    <Button
        android:id="@+id/btn_volver_borrar3"
        android:layout_width="153dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="#0091D3"
        android:onClick="Volver"
        android:text="@string/volver"
        android:textColor="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_actualizar_libro"
        android:layout_width="153dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="#0091D3"
        android:onClick="Actualizar"
        android:text="Actualizar"
        android:textColor="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_detalles_libro3"
        android:layout_width="279dp"
        android:layout_height="148dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/nada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_detalles_titulo_libro_editar"
        app:srcCompat="@drawable/libro" />

    <TextView
        android:id="@+id/txt_detalles_titulo_libro_editar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#61CEFF"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/editar_libro_titulo"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_id_libro_editar"
        android:layout_width="70dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:gravity="center|center_horizontal"
        android:text="@string/id_detalles"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_editar_titulo_libro"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nuevo nombre del libro..."
        android:inputType="textPersonName"
        android:textColorHint="#575757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_detalles_libro3" />

    <EditText
        android:id="@+id/edt_editar_autor_libro"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nuevo autor del libro..."
        android:inputType="textPersonName"
        android:textColorHint="#575757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_editar_titulo_libro" />

    <EditText
        android:id="@+id/edt_editar_paginas_libro"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Actualizar paginas del libro..."
        android:inputType="textPersonName"
        android:textColorHint="#575757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_editar_autor_libro" />

    <EditText
        android:id="@+id/edt_editar_precio_libro"
        android:layout_width="272dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Actualizar precio del libro..."
        android:inputType="textPersonName"
        android:textColorHint="#575757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_editar_paginas_libro" />
</androidx.constraintlayout.widget.ConstraintLayout>